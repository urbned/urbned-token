{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["@nomicfoundation/hardhat-ethers", "hardhat"]
  },
  "include": ["scripts/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}